<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:splitMotionEvents">false</item>
  </style>

  <style name="AppTheme.ActionBar">
    <item name="android:actionMenuTextColor">@color/white</item>
    <item name="android:background">@color/black</item>
    <item name="contentInsetStart">0dp</item>
  </style>

  <style name="TextAppearance.Toolbar.title" parent="BaseTextAppearance">
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="BaseTextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="BaseTextAppearance.White">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="BaseTextAppearance.White.ExtraLarge">
    <item name="android:textSize">48sp</item>
  </style>

  <style name="BaseTextAppearance.White.Large">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="Button" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">12sp</item>
    <item name="android:stateListAnimator">@animator/animate_elevation</item>
  </style>

  <style name="Button.Rounded">
    <item name="android:background">@drawable/bg_button_rounded_cardinal</item>
  </style>

</resources>
